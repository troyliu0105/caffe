#=============== net
net: "models/voc/yolov3-tiny.train.test.bm2.2.prototxt"

#=============== iter
# voc07 test has 4952 images
test_iter: 4952
#test_iter: 2476
test_interval: 2000
# 50,200 * 64(batch_size <-> (4 * 16)) -> 3,212,800
# 3,212,800 / (8 batch * 8 iter_size) = 50200
max_iter: 50200
iter_size: 8

#=============== optimizer
solver_mode: CPU
type: "Adam"
base_lr: 0.001
weight_decay: 0.0005
lr_policy: "multistep"
gamma: 0.1
burn_in: 1000
burn_in_power: 4
stepvalue: 40000
stepvalue: 45000

#=============== snapshot
snapshot: 5000
snapshot_prefix: "models/voc/checkpoints/yolov3-tiny.bm2.1"
snapshot_after_train: true

#=============== evaluate
eval_type: "detection"
ap_version: "11point"
show_per_class_result: true

#=============== misc
display: 100
debug_info: false
test_initialization: false
average_loss: 25
random_seed: 3355411